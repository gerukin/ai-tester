{
	"compilerOptions": {
		// Output
		"outDir": "dist",
		"module": "NodeNext",
		"moduleDetection": "force",
		"moduleResolution": "nodenext",
		"verbatimModuleSyntax": true,

		// Enable latest features
		"lib": ["ESNext", "DOM"],
		"target": "ESNext",

		// Handle JS
		"allowJs": true,
		"checkJs": true,

		// Best practices
		"strict": true,
		"skipLibCheck": true,
		"noFallthroughCasesInSwitch": true,

		// Some stricter flags
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noPropertyAccessFromIndexSignature": true
	},

	"include": ["src/**/*", "scripts/**/*"]
}
